# Infinite Story Loop - Environment Configuration
# Copy this file to .env and adjust values as needed

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/game.log
CONSOLE_LOG=false

# Game configuration
AUTO_SAVE_ENABLED=true
AUTO_SAVE_INTERVAL=10
SAVE_DIRECTORY=saves

# Display settings
CONSOLE_WIDTH=70
CLEAR_SCREEN_ON_START=true

# Debug settings (development only)
DEBUG_MODE=false
SHOW_NODE_IDS=false
VERBOSE_PARADOX_DETECTION=false
